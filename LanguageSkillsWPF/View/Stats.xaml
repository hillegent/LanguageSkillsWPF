<UserControl
    x:Class="LanguageSkillsWPF.View.Stats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LanguageSkillsWPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:LanguageSkillsWPF.ViewModel"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="622">

    <UserControl.DataContext>
        <vm:StatsVM />
    </UserControl.DataContext>

    <Grid>
        <Border Background="AliceBlue" CornerRadius="0,20,20,0">
            <TextBlock Style="{StaticResource Text_Style}" Text="STATS" />
        </Border>
    </Grid>
</UserControl>